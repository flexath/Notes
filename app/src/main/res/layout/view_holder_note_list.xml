<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_large"
    android:layout_marginEnd="@dimen/margin_large"
    android:layout_marginBottom="@dimen/margin_medium_2"
    android:background="@drawable/note_pink_rounded_background"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_card_medium_2"
    android:paddingTop="@dimen/margin_card_medium_2"
    android:paddingEnd="@dimen/margin_card_medium_2"
    android:paddingBottom="@dimen/margin_card_medium_2">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNoteTitleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_heading_1x"
        tools:text="To Learn List" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNoteDescriptionHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:fontFamily="@font/nunito_semibold"
        android:maxLines="7"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular_2x"
        tools:text="I am aung thiha , junior android developer" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNoteDateHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nunito"
            android:gravity="center_vertical|start"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small"
            tools:text="February 21"
            tools:ignore="RelativeOverlap" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnDeleteNoteHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:src="@drawable/ic_baseline_delete_white_24dp" />
    </RelativeLayout>


</LinearLayout>